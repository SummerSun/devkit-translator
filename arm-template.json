{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "iotHubName": {
            "type": "string"
        },
        "iotHubSku": {
            "type": "string",
            "allowedValues": [
                "F1",
                "S1",
                "S2"
            ],
            "defaultValue": "F1"
        },
        "iotHubCapacity": {
            "type": "int",
            "minValue": 1,
            "defaultValue": 1
        },
        "repoUrl": {
            "type": "string",
            "defaultValue": "https://github.com/SummerSun/azure-function-deploy.git"
        },
        "storageAccountType": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Standard_GRS",
                "Standard_ZRS",
                "Premium_LRS"
            ],
            "metadata": {
                "description": "Storage Account type"
            }
        }
    },
    "variables": {
        "resourceLocation": "[resourceGroup().location]",
        "functionAppName": "[concat('functionApp-', uniquestring(resourceGroup().id))]",
        "cognitiveServiceName": "[concat('cognitiveService-', uniquestring(resourceGroup().id))]",
        "hostingPlanName": "[concat('hostingPlan-', uniquestring(resourceGroup().id))]",
        "funcAppSiteName": "[concat('functionAppSite-', uniquestring(resourceGroup().id))]",
        "storageAccountName": "[concat('storage-', uniquestring(resourceGroup().id))]",
        "iotHubResourceId": "[resourceId('Microsoft.Devices/Iothubs', parameters('iotHubName'))]",
        "iotHubKeyResource": "[resourceId('Microsoft.Devices/Iothubs/Iothubkeys', parameters('iotHubName'), 'iothubowner')]"
    },
    "resources": [
        {
            "name": "[variables('cognitiveServiceName')]",
            "type": "Microsoft.CognitiveServices/accounts",
            "apiVersion": "2017-04-18",
            "sku": {
                "name": "F0"
            },
            "kind": "SpeechTranslation",
            "location": "[variables('resourceLocation')]",
            "properties": {}
        },
        {
            "apiVersion": "2016-02-03",
            "type": "Microsoft.Devices/IotHubs",
            "name": "[parameters('iotHubName')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "[parameters('iotHubSku')]",
                "capacity": "[parameters('iotHubCapacity')]"
            }
        },
        {
            "apiVersion": "2016-02-03",
            "type": "Microsoft.Devices/IotHubs/eventhubEndpoints/ConsumerGroups",
            "name": "[concat(parameters('iotHubName'), '/events/cg1')]",
            "dependsOn": [
                "[concat('Microsoft.Devices/Iothubs/', parameters('iotHubName'))]"
            ]
        },
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('storageAccountName')]",
            "apiVersion": "2016-12-01",
            "location": "[resourceGroup().location]",
            "kind": "Storage",
            "sku": {
                "name": "[parameters('storageAccountType')]"
            }
        },
        {
            "type": "Microsoft.Web/serverfarms",
            "sku": {
                "name": "Y1",
                "tier": "Dynamic",
                "size": "Y1",
                "family": "Y",
                "capacity": 0
            },
            "kind": "functionapp",
            "name": "[variables('functionAppName')]",
            "apiVersion": "2015-08-01",
            "location": "[variables('resourceLocation')]",
            "properties": {
                "name": "[variables('functionAppName')]",
                "numberOfWorkers": 0
            },
            "dependsOn": []
        },
        {
            "type": "Microsoft.Web/sites",
            "kind": "functionapp",
            "name": "[variables('funcAppSiteName')]",
            "apiVersion": "2015-08-01",
            "location": "[variables('resourceLocation')]",
            "properties": {
                "name": "[variables('funcAppSiteName')]",
                "siteConfig": {
                    "appSettings": [{
                            "name": "AzureWebJobsDashboard",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')),'2015-05-01-preview').key1)]"
                        },
                        {
                            "name": "AzureWebJobsStorage",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')),'2015-05-01-preview').key1)]"
                        },
                        {
                            "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')),'2015-05-01-preview').key1)]"
                        },
                        {
                            "name": "WEBSITE_CONTENTSHARE",
                            "value": "[concat(toLower(variables('functionAppName')),'azfunccontents')]"
                        },
                        {
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "~1"
                        },
                        {
                            "name": "WEBSITE_NODE_DEFAULT_VERSION",
                            "value": "6.5.0"
                        },
                        {
                            "name": "CONNECTION_STRING",
                            "value": "[concat('HostName=', reference(variables('iotHubResourceId'), '2016-02-03').hostName, ';SharedAccessKeyName=', 'iothubowner', ';SharedAccessKey=', listkeys(variables('iotHubKeyResource'), '2016-02-03').primaryKey)]"
                        },
                        {
                            "name": "SUBSCRIPTION_KEY",
                            "value": "[listKeys(resourceId('Microsoft.CognitiveServices/accounts', variables('cognitiveServiceName')), '2017-04-18').key1]"
                        }
                    ]
                },
                "hostNames": [
                    "[concat(variables('funcAppSiteName'),'.azurewebsites.net')]"
                ],
                "enabledHostNames": [
                    "[concat(variables('funcAppSiteName'),'.azurewebsites.net')]",
                    "[concat(variables('funcAppSiteName'),'.scm.azurewebsites.net')]"
                ],
                "hostNameSslStates": [{
                        "name": "[concat(variables('funcAppSiteName'),'.azurewebsites.net')]",
                        "sslState": 0,
                        "thumbprint": null,
                        "ipBasedSslState": 0
                    },
                    {
                        "name": "[concat(variables('funcAppSiteName'),'.scm.azurewebsites.net')]",
                        "sslState": 0,
                        "thumbprint": null,
                        "ipBasedSslState": 0
                    }
                ],
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]"
            },
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', variables('hostingPlanName'))]",
                "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
            ],
            "resources": [{
                "apiVersion": "2015-08-01",
                "name": "web",
                "type": "sourcecontrols",
                "dependsOn": [
                    "[resourceId('Microsoft.Web/sites', variables('functionAppName'))]"
                ],
                "properties": {
                    "RepoUrl": "[parameters('repoUrl')]",
                    "branch": "master",
                    "IsManualIntegration": true
                }
            }]
        }
    ]
}